              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"123456\",\n  \"confirmPassword\": \"123456\",\n  \"email\": \"testuser@example.com\",\n  \"phone\": \"13800138000\",\n  \"realName\": \"测试用户\"\n}"
